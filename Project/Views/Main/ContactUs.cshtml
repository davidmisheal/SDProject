@{
	ViewData["Title"] = "ContactUs";
}
<!DOCTYPE html>
<html>
<head>
	<title>Contact Us</title>
	<link rel="stylesheet" href="style.css">
	<style>
		.container {
			max-width: 800px;
			margin: 0 auto;
			padding: 50px;
			text-align: center;
		}

		h1 {
			font-size: 36px;
			margin-bottom: 30px;
		}

		.contact-info {
			text-align: left;
			margin-top: 50px;
		}

		ul {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		li {
			margin-bottom: 10px;
		}

		a {
			color: #333;
			text-decoration: none;
		}

		.social-media {
			display: flex;
			justify-content: center;
			align-items: center;
			margin-top: 20px;
		}

			.social-media li {
				margin: 0 10px;
			}

	</style>
</head>

<body>
	<div class="container">
		<h1>Contact Us</h1>
		<div class="contact-info">
			<h2>Hotlines:</h2>
			<ul>
				<li>General inquiries: 1-800-123-4567</li>
				<li>Emergency assistance: 1-800-555-1212</li>
				<li>Customer support: 1-888-777-9999</li>
			</ul>
			<h2>Email:</h2>
			<a href="mailto:contact@example.com">contact@example.com</a>
			<h2>Location:</h2>
			<p>123 Main St, Anytown USA 12345</p>
			<h2>Social Media:</h2>
			<ul class="social-media">
				<li><a href="https://www.facebook.com/example">Facebook</a></li>
				<li><a href="https://www.twitter.com/example">Twitter</a></li>
				<li><a href="https://www.instagram.com/example">Instagram</a></li>
			</ul>
		</div>
	</div>

</body>
</html>









































